extends base

block content
    section.music-section#recnet
        .music-header
            .title-wrapper 
                h2 Listen again 
                .more more
            .buttons.desktop
                img.left(src="static/icons/left.svg")
                img.right(src="static/icons/right.svg")   
        .music-wrapper
            .music
                .cover-wrapper
                    img(src="") 
                .info 
                    .title Chopin: Piano Sonata No.3 1st Mov.
                    .performer Maurizio Pollini

    section.music-wection#recommend 
        .music-header
            .title-wrapper 
                h2 Music for 
                    span afternoon
                .more more
            .buttons.desktop
                img.left(src="static/icons/left.svg")
                img.right(src="static/icons/right.svg")   
        .music-wrapper
            .music
                .cover-wrapper
                    img(src="") 
                .info 
                    .title Chopin: Piano Sonata No.3 1st Mov.
                    .performer Maurizio Pollini

    section.music-wection#new 
        .music-header
            .title-wrapper 
                h2 New released
                .more more
            .buttons.desktop
                img.left(src="static/icons/left.svg")
                img.right(src="static/icons/right.svg")   
        .music-wrapper
            - for(let i=0; i<10; i++)
                .music
                    .cover-wrapper(onclick = `addPlaylist('${recent[i].videoId}', '${recent[i].title}', '${recent[i].performer}', '${recent[i].composer}' ); updateNowPlaying()`)
                        img(src="") 
                    .info 
                        .title #{recent[i].title}
                        .performer #{recent[i].performer}

    section.music-wection#top 
        .music-header
            .title-wrapper 
                h2 Today's charts
                .more more
            .buttons.desktop
                img.left(src="static/icons/left.svg")
                img.right(src="static/icons/right.svg")   
        .music-wrapper
            - for(let i=0; i<5; i++)
                .column
                    - for(let j=0; j<4; j++)
                        .music
                            .rank #{i*4+j+1}
                            .cover-wrapper(onclick = `addPlaylist('${rank[i*4+j].videoId}', '${rank[i*4+j].title}', '${rank[i*4+j].performer}', '${rank[i*4+j].composer}' ); updateNowPlaying()`)
                                img(src="") 
                            .info 
                                .title #{rank[i*4+j].title}
                                .performer #{rank[i*4+j].performer}
                
    section.music-wection#recommend-playlist 
        .music-header
            .title-wrapper 
                h2 How about this playlist?
                .more more
            .buttons.desktop
                img.left(src="static/icons/left.svg")
                img.right(src="static/icons/right.svg")   
        .music-wrapper
            .music
                .cover-wrapper
                    img(src="") 
                .info 
                    .title Morning Classic
                    .performer Leonard Hoffstadter
