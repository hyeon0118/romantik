nav 
    .logo.desktop 
        a(href="/")
            img(src="../../client/assets/img/logo.png")
    ul
        a(href="/")
            li(data-menu="home")
                img(src="../../public/icons/home.svg")
                span.tablet home
        a(href="/search")
            li(data-demnu="search")
                img(src="../../public/icons/search.svg")
                span.tablet search
        - if (loggedIn)
            a(href="/library")
                li(data-menu="library")
                    img(src="/public/icons/library_inactive.svg")
                    span.tablet library
            .divider.desktop 
            ul.my-playlist.desktop 
                a(href="/playlist/liked")
                    li(data-menu="playlist")
                        img(src="../public/icons/heart_inactive.svg")
                        span Like
                - for (i=0; i < list.length; i++)
                    a(href=`/playlist/${list[i]._id}`)
                        li(data-menu="playlist")
                            .playlist-cover #{list[i].name.charAt(0)}
                            span #{list[i].name}
        - else 
            a(href="#")
                li(onclick="loginAlert()")
                    img(src="../public/icons/library_inactive.svg")
                    span.tablet library
            .divider.desktop 
            ul.my-playlist.desktop 
                a(href="#")
                    li(onclick="loginAlert()")
                        img(src="../public/icons/heart_inactive.svg")
                        span Like
