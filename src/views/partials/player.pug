#player-container
    .player 
        .player-header.mobile.hidden
            img(src="/static/icons/close.svg")
        .player-screen
            .now-playing
                .cover-wrapper
                .info 
                    .composer.desktop 
                        span Composer
                    .title 
                        span Title
                    .performer 
                        span Performer
                .like-wrap.mobile.open.hidden
                    img(class="like inactive", src="/static/icons/heart_inactive.svg")
                    .tooltip Please sign in 
            .controller.mobile
                .icons
                    img.play(src="/static/icons/play.svg")
                .like-wrap
                    img(class="like inactive", src="/static/icons/heart_inactive.svg")
                    .tooltip Please sign in 
            .controller-desktop.closed 
                .icons.desktop 
                    img(class="random", src="/static/icons/random_inactive.svg")
                    img(class="previous", src="/static/icons/previous.svg")
                    img.play(src="/static/icons/play.svg")
                    img(class="next", src="/static/icons/next.svg")
                    img(class="repeat", src="/static/icons/repeat_inactive.svg")
                .progress-bar
                    .desktop.passed 0:00
                    .desktop.total 0:00
                    .bar 
            .controller-right-wrapper.desktop
                    .like-wrap
                        img(class="like inactive", src="/static/icons/heart_inactive.svg")
                        .tooltip Please sign in 
                    .view-wrap 
                        img(class="add-to-library" src="/static/icons/add_to_library.svg")
                        .tooltip.hidden Add to library
                    .view-wrap
                        img(class="view-playlist" src="/static/icons/view_playlist.svg")
                        .tooltip.hidden View playlist
                    .soundbar-container
                        .soundbar-wrapper
                            .soundbar
                        img(class="sound", src="/static/icons/sound.svg")

        .bottom-icons.mobile.hidden
            .view-wrap 
                img(class="add-to-library", src="/static/icons/add_to_library.svg")
                .tooltip.hidden Add to library
            .view-wrap 
                img(class="view-playlist" src="/static/icons/playlist.svg")
                .tooltip.hidden View playlist
    .current-playlist.hidden
        .player-header
            img(src="/static/icons/close.svg")
        h2 Playlist
        .current-playlist-wrapper 
    .view-library.hidden
        h3.title Add to library
        .titles-wrap 
            - for (i=0; i < list.length; i++)
                .library-title(onclick=`addToLibrary("${list[i]._id}")`) #{list[i].name}
            form(action="/createPlaylist", method="POST", id="playlistForm")
                .library-title.add
                    span + Create a playlist
                    input.hidden(name="name", type="text", placeholder="Create a playlist")
                input.hidden(name="currentVideoId", type="text", value="")

        h3.createBtn.hidden(onclick="createPlaylist(event)") Create a playlist

            
    #player
        
