extends base

block content
    section#user
        section#register
            h2 Sign up
            form(action="/signup",method="POST")
                .email
                    img(src="public/icons/email.svg")
                    input(name="email", type="email", placeholder="Enter your E-mail")
                .pw
                    img(src="public/icons/pw.svg")
                    input(name="password", type="password", placeholder="Enter your password")
                .pw
                    img(src="public/icons/pw.svg")
                    input(name="verification", type="password", placeholder="Enter your password")
                .username
                    img(src="public/icons/user.svg")
                    input(name="username", type="text", placeholder="Enter your username")
                .error 
                .submit(onclick="registerHandler(event)") Register
            div Have already an account? Click 
                a(href="/profile")
                    span.here here
                span  to sign in!