block content
    section#playlist 
        section#playlist-info-wrapper 
            - if (playlistInfo.name == "Your likes")
                .cover-wrapper.like
                    svg(xmlns="http://www.w3.org/2000/svg", height="40", viewBox="0 96 960 960", width="40")
